---

<p class="artikel_oversrkift">
  <strong>Vores Produkter</strong><br />
  Ugens Nyheder
</p>

<section>
  {data.map(product => (
    <article class="card">
      <img src={product.image_URL} alt={product.productname} class="card-image" />
      <div class="card-content">
        <h3>{product.productname}</h3>
        <p>{product.price} kr</p>
      </div>
      <button class="add-to-cart">Tilf√∏j til kurv</button>
    </article>
  ))}
</section>

<style>
  .artikel_oversrkift {
    font-size: 1.5rem;
    color: #030303;
    font-family: "Poppins", sans-serif;
    line-height: 3rem;
    padding-left: 2rem;
    padding-top: 4rem;
  }
  .artikel_oversrkift strong {
    font-size: 2rem;
    color: #030303;
    font-family: "Poppins", sans-serif;
    line-height: 3rem;
  }

  section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    padding: 1rem;
  }
  .card {
  position: relative; 
  display: grid;
  grid-template-columns: 1fr;
  overflow: hidden;
  max-width: 100%;
  text-align: center;
  font-family: "Poppins", sans-serif;
  border: 2px solid transparent;
  padding: 0.5rem;
}

  .card-image {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .card-content {
    /* padding: 1rem; */
    text-align: center;
  }

  .card-description {
    font-size: 1rem;
    color: #090808;
    margin-bottom: 1rem;
  }

  .card-price {
    font-size: 1.2rem;
  }

  .card:hover {
    border: 2px solid #090808;
    overflow: hidden;
  }
  .add-to-cart {
  position: absolute;
  bottom: 125px;
  left: 10px;
  right: 10px;
  display: none; /* skjult som standard */
  background-color: #f2f0e8;
  border: 1px solid black;
  padding: 0.5rem 1rem;
  font-size: 1rem;
  font-weight: bold;
  text-align: center;
  cursor: pointer;
}

  .card:hover .add-to-cart {
    display: block;
  }

  @media (min-width: 429px) {
    .artikel_oversrkift {
      font-size: 2rem;
      padding-top: 10rem;
    }
    .add-to-cart {
      display: block;
    }
  }

  .add-to-cart {
    display: none;
    background-color: #f2f0e8;
    border: 1px solid black;
    padding: 0.5rem 1rem;
    font-size: 1rem;
    font-weight: bold;
    text-align: center;
    cursor: pointer;
  }

  .card:hover .add-to-cart {
    display: block;
  }

  @media (max-width: 428px) {
    .artikel_oversrkift {
      font-size: 2rem;
      padding-top: 10rem;
    }
    .add-to-cart {
      display: block;
    }

    .card:hover .add-to-cart {
      display: block;
    }
  }
</style>
