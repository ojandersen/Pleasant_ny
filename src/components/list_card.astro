<style>
  html {
    background-color: #f2f0e8;
  }
  .ooak {
    display: flex;
    position: relative;
    justify-content: center;
  }
  .ooak img {
    width: 15%;
  }
  section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    padding: 1rem;
  }
  .card {
    display: grid;
    grid-template-columns: 1fr;
    overflow: hidden;
    max-width: 100%;
    text-align: center;
    font-family: "Poppins", sans-serif;
    border: 2px solid transparent;
    padding: 0.5rem;
  }

  .card-image {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .card-content {
    /* padding: 1rem; */
    text-align: center;
  }

  .card-description {
    font-size: 1rem;
    color: #090808;
    margin-bottom: 1rem;
  }

  .card-price {
    font-size: 1.2rem;
  }

  .card:hover {
    border: 2px solid #090808;
    overflow: hidden;
  }
  .add-to-cart {
    display: none;
    background-color: #f2f0e8;
    border: 1px solid black;
    padding: 0.5rem 1rem;
    font-size: 1rem;
    font-weight: bold;
    text-align: center;
    cursor: pointer;
  }

  .card:hover .add-to-cart {
    display: block;
  }

  @media (min-width: 429px) {
    .add-to-cart {
      display: block;
    }
  }

  .add-to-cart {
